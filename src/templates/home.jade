#loginModal.modal.fade.login
  .modal-dialog.login.animated
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
        h4.modal-title Login with
      .modal-body
        .box
          .content
            .social
              a.circle.github(href='/auth/github')
                i.fa.fa-github.fa-fw
              a#google_login.circle.google(href='/auth/google_oauth2')
                i.fa.fa-google-plus.fa-fw
              a#facebook_login.circle.facebook(href='/auth/facebook')
                i.fa.fa-facebook.fa-fw
            .division
              .line.l
              span or
              .line.r
            .error
            .form.loginBox
              form(method='post', action='/login', accept-charset='UTF-8')
                input#email.form-control(type='text', placeholder='Email', name='email')
                input#password.form-control(type='password', placeholder='Password', name='password')
                input.btn.btn-default.btn-login(type='button', value='Login', onclick='loginAjax()')
        .box
          .content.registerBox(style='display:none;')
            .form
              form(method='post', html='{:multipart=>true}', data-remote='true', action='/register', accept-charset='UTF-8')
                input#email.form-control(type='text', placeholder='Email', name='email')
                input#password.form-control(type='password', placeholder='Password', name='password')
                input#password_confirmation.form-control(type='password', placeholder='Repeat Password', name='password_confirmation')
                input.btn.btn-default.btn-register(type='submit', value='Create account', name='commit')
      .modal-footer
        .forgot.login-footer
          span
            | Looking to 
            a(href='javascript: showRegisterForm();') create an account
            |                             ?
        .forgot.register-footer(style='display:none')
          span Already have an account?
          a(href='javascript: showLoginForm();') Login
